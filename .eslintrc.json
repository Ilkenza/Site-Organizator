{
  // ESLint Configuration for Site Organizer
  // - Next.js best practices
  // - React/JSX rules
  // - Code quality standards
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    // Variables
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    // React/JSX
    "react/no-unescaped-entities": "warn",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    // Code Quality
    "no-empty": "warn",
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error",
          "info"
        ]
      }
    ],
    "prefer-const": "warn",
    "no-var": "error",
    // Best Practices
    "eqeqeq": [
      "warn",
      "always"
    ],
    "no-eval": "error",
    "no-implied-eval": "error"
  }
}